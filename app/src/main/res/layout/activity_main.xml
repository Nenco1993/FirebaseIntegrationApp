<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.neven.firebaseintegrationapp.activities.MainActivity"
        android:background="@android:color/holo_blue_light">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:id="@+id/etEmail"
            android:hint="email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/etEmail" android:layout_alignStart="@+id/etEmail"
            android:layout_marginTop="23dp" android:id="@+id/etPassword" android:hint="password"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_alignStart="@+id/bRegister" android:id="@+id/bLogin"/>
    <TextView
            android:text="forgot your password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/bLogin"
            android:layout_centerHorizontal="true" android:layout_marginTop="27dp" android:id="@+id/tvForgotPassword"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bRegister" android:layout_below="@+id/etPassword" android:layout_centerHorizontal="true"/>
</RelativeLayout>
